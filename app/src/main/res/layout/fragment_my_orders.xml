<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/placeIV"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/img4" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="3"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/placeNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:text="Restaurant Name"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/placeLocationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:drawablePadding="4dp"
                    android:gravity=""
                    android:maxLength="40"
                    android:maxLines="1"
                    android:text="Buyer name"
                    android:textColor="#8B8686" />

                <TextView
                    android:id="@+id/placeReiewsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="buyer Email:"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/placeReiewsTV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="date:"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/placeReiewsTV4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="status: under Review"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="105dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/reg_btn_style"
                    android:text="Call"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_password"
                    app:layout_constraintVertical_bias="0.0" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
